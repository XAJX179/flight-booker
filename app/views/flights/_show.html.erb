<div class="flight-details">
  <%= form.radio_button :flight_id, flight_id %>

  <label for=<%= "booking_flight_id_#{flight_id}" %>>
    <span>
      <span>
        <%= departure_airport.name %>
        (
        <%= departure_airport.code %>
        )
      </span>
      <span>
        To ==>
      </span>
      <span>
        <%= arrival_airport.name %>
        (
        <%= arrival_airport.code %>
        )
      </span>
    </span>
    <br>
    <span>
      <%= duration.inspect %>
    </span>
    <br>
    <span>
      <%= format_to_date(start_time) %>
      -
      <%= format_to_time(start_time) %>
    </span>
  </label>
</div>
